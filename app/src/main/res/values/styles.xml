<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="clickableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="tituloActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">30sp</item>
    </style>


    <!-- [Cadastro.class] -->
    <style name="addspinner">
        <item name="android:background">@drawable/addspinner_button</item>
    </style>
    <style name="addspinnerField">
        <item name="android:background">@drawable/addspinner_field</item>
    </style>

    <!-- [Principal.class] -->
    <style name="genericHorizontalLinear">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="textviewPrincipal" parent="genericHorizontalLinear">
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="navbarPrincipal"  parent="genericHorizontalLinear">
        <item name="android:background">@drawable/principal_navbutton</item>
    </style>
</resources>