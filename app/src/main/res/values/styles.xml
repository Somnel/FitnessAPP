<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- [Classes] -->
    <style name="genericLinearLayout">
        <item name="android:background">@color/p2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/p4</item>
        <item name="colorSecondary">@color/p1</item>
        <item name="colorTertiary">@color/p3</item>
        <item name="colorOnBackground">@color/p2</item>
    </style>
    
    

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="clickableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="tituloActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/p3</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- [Cadastro.class] -->

    <!-- [Principal.class] -->
    <style name="genericHorizontalLinear">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="textviewPrincipal" parent="genericHorizontalLinear">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="navbarPrincipal"  parent="genericHorizontalLinear">
        <item name="android:background">@drawable/principal_navbutton</item>
    </style>

    <style name="perfilCampo_titulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="perfilCampo_valor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="cadastro_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="aviso_oculto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>